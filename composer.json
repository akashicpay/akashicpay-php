{
  "name": "akashic/akashic-pay",
  "description": "A library to interact with the AkashicChain network, written in PHP.",
  "type": "library",
  "scripts": {
    "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility",
    "post-update-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility",
    "phpcs": "phpcs --standard=phpcs.xml src tests",
    "phpcbf": "phpcbf --standard=phpcs.xml src tests",
    "psalm": "vendor/bin/psalm --config=psalm.xml"
  },
  "require": {
    "php": ">=7.4",
    "ext-gmp": "*",
    "fgrosse/phpasn1": "^2.5.0",
    "simplito/elliptic-php": "^1.0",
    "monolog/monolog": "^2.9",
    "guzzlehttp/guzzle": "^7.9",
    "protonlabs/bitcoin": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Akashic\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Akashic\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "*",
    "phpcompatibility/php-compatibility": "*",
    "vimeo/psalm": "^5.26"
  },
  "config": {
    "platform": {
      "php": "7.4.33"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
